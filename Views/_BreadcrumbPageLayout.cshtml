@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>@Model.Value("pageTitle")</title>
   <meta name="keywords" content="@Model.Value("pageKeywords")">
   <meta name="description" content="@Model.Value("pageDescription")">
   <meta name="author" content="@Model.Value("pageAuthor")">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
   <link rel="stylesheet" href="/css/style.css">
   <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
   <script defer src="https://kit.fontawesome.com/0e51334eae.js" crossorigin="anonymous"></script>
   <script defer src="/scripts/script.js"></script>
</head>
<body>

    <div class="wrapper-container">
        <header class="header">
            <img class="background-lines" src="~/static/background-effects/background-lines.svg" alt="background-lines">

            @await Html.PartialAsync("_Navbar")
            @await Html.PartialAsync("_Breadcrumb")
        </header>
        
        <main>
            @RenderBody()
        </main>
        
        @await Html.PartialAsync("_Footer")
    </div>
    
</body>
</html>